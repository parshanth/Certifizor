<section class="space-y-6">

  <div class="flex justify-between items-center">
    <h2 class="text-2xl font-bold">Manage Students</h2>
    <a href="/home" class="text-blue-600 hover:underline">← Back to Home</a>
  </div>

  <!-- Add Student Form -->
  <form class="bg-white p-6 rounded shadow space-y-4">
    <h3 class="text-lg font-semibold">Add New Student</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <input type="text" name="name" placeholder="Name" class="border p-2 rounded w-full" />
      <input type="email" name="email" placeholder="Email" class="border p-2 rounded w-full" />
      <input type="text" name="studentId" placeholder="Student ID" class="border p-2 rounded w-full" />
    </div>
    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
      ➕ Add Student
    </button>
  </form>

  <!-- Student List -->
  <div class="bg-white p-6 rounded shadow">
    <h3 class="text-lg font-semibold mb-4">Student List</h3>
    
    <table class="min-w-full table-auto text-left">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Student ID</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= student.name %></td>
            <td class="px-4 py-2"><%= student.studentId %></td>
            <td class="px-4 py-2"><%= student.status %></td>
            <td class="px-4 py-2 space-x-2">
              <button class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded">Update</button>
              <button class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">Delete</button>
              <button class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded">Send Offer</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</section>
